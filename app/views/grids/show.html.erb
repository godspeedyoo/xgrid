<% if @grid %>
  <h1><%= @grid.size %> x <%= @grid.size %></h1>
<% else %>
  <h1>No grid exists for given dimensions. Click to create</h1>
  <%= link_to 'Create Grid', new_grid_path %>
<% end %>


<table>
  <% @grid.size.times do %>
    <tr>
      <% @grid.size.times do %>
        <td></td>
      <% end %>
    </tr>
  <% end %>
</table>